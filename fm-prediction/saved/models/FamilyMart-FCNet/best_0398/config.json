{
    "name": "FamilyMart-FCNet",
    "n_gpu": 2,
    "model": {
        "type": "FCModel",
        "args": {}
    },
    "data_loader": {
        "type": "FamilyMartDataLoader",
        "args": {
            "data_dir": "data/family_mart",
            "batch_size": 128,
            "shuffle": true,
            "validation_split_ratio": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "err"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1000,
        "verbosity": 2,
        "monitor": "min val_err",
        "early_stop": 10,
        "tensorboard": true
    }
}